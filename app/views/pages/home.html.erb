<div class="banner" id="banner" style="background-image: url('<%= image_path 'sebastian-staines-xZIFEPtRsRI-unsplash.jpg' %>');">
  <div class ="container">
    <div class="banner-content">
      <h2> Louez votre matériel de ski à d'autres particuliers! </h2>
      <%= form_tag products_path, method: :get, class: "form-group form-inline" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Skis, chaussures, ..."
        %>
        <%= text_field_tag :start_date,
          params[:star_date],
          class: "form-control",
          id: "start_date",
          placeholder: "Date de début"
        %>
        <%= text_field_tag :end_date,
          params[:end_date],
          class: "form-control",
          id: "end_date",
          placeholder: "Date de fin"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
    <%#= link_to "Voir les annonces !", products_path, class: "btn btn-primary px-3 banner-btn" %>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between">
    <h4 class="mt-5 mb-0"> <strong> <%= Product.all.count %> annonces </strong></h4>
    <%= simple_form_for Product.new, input_html: { class: "d-flex"} do |p| %>
      <%= p.input :category,
                  collection: Product::CATEGORIES,
                  label: 'Catégorie',
                  class: "products-selector" %>
    <% end %>
  </div>
  <div class="row">
    <% Product.all.each do |product| %>
    <div class="col-12 col-md-6 col-lg-4">
      <%= render 'shared/card', product: product %>
    </div>
    <% end %>
  </div>
</div>
