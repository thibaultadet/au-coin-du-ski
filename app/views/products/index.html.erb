<div class="banner-small" style="background-image: url('<%= image_path 'sebastian-staines-xZIFEPtRsRI-unsplash.jpg' %>');">
  <div class ="container">
    <div class="banner-content">
      <h2> Votre recherche </h2>
      <h4> <strong>  <%= @products.count%> annonces trouvées </strong> </h4>
    </div>
  </div>
</div>

<div class="container">
  <% if @products.count > 0 %>
    <div id="products-selector">
      <p>Filtrer par:</p>
      <%= form_for @products.first do |p| %>
        <%= p.select :category,
          collection: Product::CATEGORIES,
          label: 'Catégorie',
          class: "custom-select"
        %>
      <% end %>
    </div>
  <% end %>
  <div class="row">
    <% @products.each do |product| %>
    <div class="col-12 col-md-6 col-lg-4">
      <%= render 'shared/card', product: product %>
    </div>
    <% end %>
  </div>
</div>
