<%= simple_form_for product do |f| %>
      <%= f.input :name,
                  label: 'Nom'%>
      <%= f.input :description,
                  label: 'Description'%>
      <%= f.input :price,
                  label: 'Prix par jour'%>
      <%= f.input :category,
                  collection: Product::CATEGORIES,
                  label: 'Catégorie'%>
      <%= f.input :address,
                  label: 'Adresse'%>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.button :submit, "Créer", class: 'btn btn-primary' %>
      <%= link_to 'Annuler', pages_my_products_path, class: 'btn btn-primary' %>
<% end %>