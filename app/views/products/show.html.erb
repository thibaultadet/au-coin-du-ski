<div class="container">
  <div class="products-display pt-5">

    <div class="mt-5">
      <div class="bg-white p-3 position-relative">
        <h2> <%= @product.name %> </h2>
        <h1 class="badge badge-primary"> <%= @product.price %> € / jour </h1>
        <h1 class="badge badge-primary"> <%= @product.category %></h1>
        <p><strong>Description</strong></p>
        <p> <%= @product.description %> </p>
        <p><strong>Adresse du produit</strong> </p>
        <p> <%= @product.address %> </p>
        <div class="vendor-avatar">
          <p><strong>Le loueur</strong></p>
          <%= cl_image_tag @product.user.avatar.key, class: 'avatar-large',alt: @product.user.first_name %>
          <p> <small> <%= @product.user.first_name  %> </small></p>
        </div>
      </div>

      <div class="mt-3 bg-white p-3">
        <p> <strong>Vérifiez les disponibilités de ce produit </strong></p>
        <%= render 'bookings/form', product: @product, booking: @booking %>
        <%= link_to "Retour aux produits", products_path %>
      </div>
    </div>
    <div class="mt-5 bg-white p-3 product-image-display">

      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% @product.photos.each_with_index do |photo, index| %>
          <% if index == 0 %>
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <%  else %>
              <li data-target="#carouselExampleIndicators" data-slide-to="#{index}"></li>
          <% end %>
          <% end %>

        </ol>
        <div class="carousel-inner">
          <% @product.photos.each_with_index do |photo, index| %>
          <%  if index == 0 %>
              <div class="carousel-item active">
                <%= cl_image_tag photo.key, class: "d-block w-100",  crop: :fill %>
              </div>
          <%  else %>
              <div class="carousel-item">
                <%= cl_image_tag photo.key, class: "d-block w-100",  crop: :fill %>
              </div>
          <% end %>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>


  </div>
</div>


