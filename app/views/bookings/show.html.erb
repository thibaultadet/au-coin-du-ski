<div class="container">
  <div class="products-display pt-5">

    <div class="mt-5">
      <div class="bg-white p-3 ">
        <h2> <%= @booking.product.name.capitalize %> </h2>
        <h1 class="badge badge-primary position-relative"> <%= @product.category %></h1>
        <p>Description</p>
        <p> <%= @product.description %> </p>
      </div>

      <div class="mt-3 bg-white p-3 position-relative">
      	<h2>Coordonnées du loueur</h2>
      	<p><%= @seller.first_name %> <%= @seller.last_name %></p>
      	<% if @booking.product.user.cell_phone %>
      	      <p> <%= @booking.product.user.cell_phone%></p>
      	<%end%>
      	<p><%= @product.address %></p>
      	<div class="vendor-avatar">
          <%= cl_image_tag @product.user.avatar.key, class: 'avatar-large',alt: @product.user.first_name %>
        </div>
      </div>

      <div class="mt-3 bg-white p-3">
      	<h2> Votre réservation</h2>
      	<p>Début de la Réservation : <%= @booking.start_date %></p>
      	<p>Fin de la Réservation : <%= @booking.end_date %></p>
      	<p><strong>Prix total : <%= @time.to_i * @product.price %> €</strong></p>
        <%= link_to "Confirmer", pages_my_bookings_path, class: "btn btn-primary btn-lg btn-block" %>
        <%= link_to "Annuler",
            booking_path(@booking), class: "btn btn-outline-primary btn-lg btn-block",
            method: :delete,
            data: { confirm: "Êtes-vous sûr?" } %>
       </div>
    </div>

    <div class="mt-5 bg-white p-3 product-image-display ">
        <%= cl_image_tag @product.photos[0].key %>
    </div>

  </div>
</div>


